<!-- üè® Header Bereich -->
<div class="zimmer-header">
  <h1>üè† Unsere Zimmer</h1>
  <p>Finden Sie das perfekte Zimmer f√ºr Ihren Aufenthalt</p>
</div>

<!-- üé† Swiper Karussell -->
<div class="swiper-container mySwiper">
  <div class="swiper-wrapper">
    <% rooms.forEach((room, index) => { %>
      <div class="swiper-slide">
        <div class="zimmer-card">
          
          <!-- üñºÔ∏è Zimmer Bild mit Verf√ºgbarkeits-Badge -->
          <div class="zimmer-image-container">
            <img src="/zimmer<%= room.image %>" 
                 alt="<%= room.name %>" 
                 class="zimmer-image">
            
            <!-- üéØ Verf√ºgbarkeits-Badge -->
            <div class="availability-badge <%= room.available <= 1 ? 'sold-out' : room.available <= 2 ? 'low' : '' %>">
              <% if (room.available > 0) { %>
                Noch <%= room.available %> frei
              <% } else { %>
                Ausgebucht
              <% } %>
            </div>
            
            <!-- üè∑Ô∏è Zimmer Name Overlay -->
            <div class="zimmer-name">
              <%= room.name %>
            </div>
          </div>
          
          <!-- üìù Zimmer Informationen -->
          <div class="zimmer-info">
            <p><%= room.description %></p>
            
            <!-- üåü Features -->
            <div class="zimmer-features">
              <% room.features.forEach(feature => { %>
                <span class="feature-icon"><%= feature %></span>
              <% }) %>
            </div>
            
            <!-- üí∞ Preis -->
            <div class="zimmer-price"><%= room.price %></div>
          </div>
          
        </div>
      </div>
    <% }) %>
  </div>

  <!-- üé† Navigation Buttons -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  
  <!-- üîò Pagination Dots -->
  <div class="swiper-pagination"></div>
</div>